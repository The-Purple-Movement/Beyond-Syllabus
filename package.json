{
  "name": "beyond-syllabus",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "dev": "turbo dev",
    "build": "turbo build",
    "sync": "bunx rimraf ./universities && git clone --depth 1 https://github.com/The-Purple-Movement/WikiSyllabus.git tempRepo && mv tempRepo/universities ./universities && bunx rimraf tempRepo",
    "update": "bun sync && bun run generate",
    "generate": "bun run ./apps/server/src/routes/syllabus/generate.ts",
    "build:prod": "bun sync && turbo -F server build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "start:server": "turbo -F server start"
  },
  "dependencies": {
    "react-icons": "^5.5.0",
    "react-spinners": "^0.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "oxlint": "^1.8.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.12"
}
