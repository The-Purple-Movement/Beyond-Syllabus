{
  "name": "beyond-syllabus",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "dev": "turbo dev",
    "build": "turbo build",
    "sync": "bunx rimraf ./universities && git clone --depth 1 https://github.com/The-Purple-Movement/WikiSyllabus.git wikisyllabus && mv wikisyllabus/universities ./universities && bunx rimraf wikisyllabus",
    "patch": "bun sync && bun run generate",
    "generate": "bun run ./apps/server/src/routes/syllabus/generate.ts",
    "build:prod": "bun sync && turbo -F server build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "start:server": "turbo -F server start"
  },
  "dependencies": {},
  "devDependencies": {
    "oxlint": "^1.8.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.12"
}
