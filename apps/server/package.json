{
  "name": "server",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown index.ts -d api --dts",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode index.ts --outfile api",
    "dev": "bun run --hot index.ts",
    "start": "bun run index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/server-timing": "^1.4.0",
    "@orpc/client": "^1.8.6",
    "@orpc/openapi": "^1.8.6",
    "@orpc/server": "^1.8.6",
    "@orpc/zod": "^1.8.6",
    "bun": "^1.2.22",
    "dotenv": "^17.2.1",
    "elysia": "^1.3.20",
    "gray-matter": "^4.0.3",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "tsdown": "^0.14.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}
